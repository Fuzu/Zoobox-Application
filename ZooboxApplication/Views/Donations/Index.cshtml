@model IEnumerable<ZooboxApplication.Models.Donations.Donation>

@{
    ViewData["Title"] = "Doações";
}

<h2>Doações</h2>

<p>
    <a asp-action="Create">Registar nova doação</a>
</p>
<table class="table" id="DonationsList">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DonationTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DonationTypeName.DonationTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><span class="glyphicon glyphicon-pencil text-muted"></span></a> |
                    <a asp-action="Details" asp-route-id="@item.Id"><span class="glyphicon glyphicon-info-sign text-primary"></span></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><span class="glyphicon glyphicon-trash text-danger"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>


@section scripts
    {

    <script>
        $(document).ready(function () {
            $('#DonationsList').DataTable(dtSettings);
        });
    </script>
}