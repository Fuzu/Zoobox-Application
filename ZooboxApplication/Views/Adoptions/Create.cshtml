@model ZooboxApplication.Models.Adoptions.Adoption

@{
    ViewData["Title"] = "Nova adopção";
}

<h2>Nova adopção</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AdoptionDate" class="control-label"></label>
                <input asp-for="AdoptionDate" class="form-control" />
                <span asp-validation-for="AdoptionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Animal" class="control-label"></label>
                <select asp-for="Animal" class="form-control" asp-items="ViewBag.Animal"></select>
                <a href="/Animals/Create">
                    não existe?
                </a>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AdoptionType" class="control-label"></label>
                <select asp-for="AdoptionType" class="form-control" asp-items="ViewBag.AdoptionType"></select>
                <a href="/AdoptionTypes/Create">
                    não existe?
                </a>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
