@model IEnumerable<ZooboxApplication.Models.Adoptions.Adoption>

@{
    ViewData["Title"] = "Index";
}

<h2>Adopções<a href="#" data-toggle="tooltip" data-placement="bottom" title="Listagem de todas as Adopções realizadas na plataforma."><i class="fa fa-question-circle" aria-hidden="true"></i></a></h2>

<p>
    <a asp-action="Create">Criar nova adopção</a>
</p>
<table class="table" id="adoptionList">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AdoptionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdoptionTypeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AdoptionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnimalName.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdoptionTypeName.AdoptionTypeName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><span class="glyphicon glyphicon-pencil"></span></a> |
                    <a asp-action="Details" asp-route-id="@item.Id" target="_blank"><span class="glyphicon glyphicon-info-sign"></span></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><span class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts
    {

    <script>
        $(document).ready(function () {
            $('#adoptionList').DataTable(dtSettings);
        });
    </script>
}