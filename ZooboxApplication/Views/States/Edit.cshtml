@model ZooboxApplication.Models.State

@{
    ViewData["Title"] = "Editar";
}


<h2>Estado do animal <a href="#" data-toggle="tooltip" data-placement="bottom" title="Editar informação relativa ao Estado do animal."><i class="fa fa-question-circle" aria-hidden="true"></i></a></h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="StateName" class="control-label"></label>
                <input asp-for="StateName" class="form-control" />
                <span asp-validation-for="StateName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
