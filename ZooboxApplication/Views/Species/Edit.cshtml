@model ZooboxApplication.Models.Specie

@{
    ViewData["Title"] = "Editar";
}

<h2<span class="glyphicon glyphicon-pencil"></span>/h2>

<h4>Specie animal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="SpecieName" class="control-label"></label>
                <input asp-for="SpecieName" class="form-control" />
                <span asp-validation-for="SpecieName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
