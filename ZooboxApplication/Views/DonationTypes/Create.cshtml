@model ZooboxApplication.Models.Animals.DonationType

@{
    ViewData["Title"] = "Novo tipo doação";
}

<h2>Criar novo tipo doação  <a href="#" data-toggle="tooltip" data-placement="bottom" title="Formulário para adicionar um novo tipo de doação, somente preencher e submter o formulário"><i class="fa fa-question-circle" aria-hidden="true"></i></a></h2>

<h4>Tipo doação</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DonationTypeName" class="control-label"></label>
                <input asp-for="DonationTypeName" class="form-control" />
                <span asp-validation-for="DonationTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
