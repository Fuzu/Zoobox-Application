@model ZooboxApplication.Models.Race

@{
    ViewData["Title"] = "Criar Nova";
}



<h4>Raça <a href="#" data-toggle="tooltip" data-placement="bottom" title="Formulário para adicionar uma nova raça, somente preencher e submter o formulário"><i class="fa fa-question-circle" aria-hidden="true"></i></a></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RaceName" class="control-label"></label>
                <input asp-for="RaceName" class="form-control" />
                <span asp-validation-for="RaceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" id="submitRace" value="Criar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
