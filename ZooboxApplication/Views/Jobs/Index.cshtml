@model IEnumerable<ZooboxApplication.Models.Job>

@{
    ViewData["Title"] = "Tarefas";
}

<h2>   @ViewData["Title"]  <a href="#" data-toggle="tooltip" data-placement="bottom" title="Listagem de todas as Tarefas realizadas na plataforma."><i class="fa fa-question-circle" aria-hidden="true"></i></a></h2>

<table class="table" id="JobsList">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Abbreviation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BeginDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Abbreviation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BeginDay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><span class="glyphicon glyphicon-pencil text-muted"></span></a> |
                    <a asp-action="Details" asp-route-id="@item.Id"><span class="glyphicon glyphicon-info-sign text-primary"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>



@section scripts
    {

    <script>
        $(document).ready(function () {
            $('#JobsList').DataTable(dtSettings);
        });
    </script>
}