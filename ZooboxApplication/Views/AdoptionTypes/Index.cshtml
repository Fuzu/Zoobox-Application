@model IEnumerable<ZooboxApplication.Models.Adoptions.AdoptionType>

@{
    ViewData["Title"] = "Tipos de Adoções";
}

<h2>   @ViewData["Title"]  <a href="#" data-toggle="tooltip" data-placement="bottom" title="Listagem de todas as Adoções realizadas na plataforma."><i class="fa fa-question-circle" aria-hidden="true"></i></a></h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="AdotptionTypeList">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AdoptionTypeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AdoptionTypeName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

